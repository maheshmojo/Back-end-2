pipeline {
    agent any
        tools {
             maven 'MAVEN-HOME'
        }
    stages {
        stage('Build') { 
            steps {
                script {
                  def pom = readMavenPom file: 'pom.xml'
                  version = pom.version
              }
                sh 'mvn install -DskipTests=true' 
            }
        }
    }
}