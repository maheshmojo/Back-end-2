pipeline {
    agent any
    tools { 
        maven 'MAVEN-HOME' 
        jdk 'Java-11' 
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "MAVEN-HOME = ${MAVEN-HOME}"
                ''' 
            }
        }

        stage ('Build') {
            steps {
                echo 'This is a minimal pipeline.'
            }
        }
    }
}